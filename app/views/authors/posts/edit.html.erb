
<div class="row">
  <div class="col-md-3">
    <div class= "card">
      <div class="card-body">
        <h1>Editing post</h1>
        <%= render "form", post: @post %>
        <br>
        <div class="d-flex justify-content-between">
          <%= link_to "Show this post", @post, class: "btn btn-success" %>
          <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
